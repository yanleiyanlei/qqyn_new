/* 公用样式文件 */
.clearfix:after {
  content: "";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

page {
  background: #f6f6f6;
}

Nhover {
  background: #fff;
}

.border1 {
  position: relative;
  border: none;
  /* top: 100rpx; */
}

.border1:after {
  content: '';
  position: absolute;
  left: 0;
  height: 1rpx;
  bottom: 0rpx;
  background: #bfbfbf;
  width: 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
}



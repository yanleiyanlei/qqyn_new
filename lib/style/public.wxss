/* 用户信息 */

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background: #000;
  z-index: 999;
  opacity: 0.3;
  filter: opacity(30);
}

.userInfo,.getIphone{
  position: fixed;
  z-index: 1000;
  background: #fff;
  width: 600rpx;
  height: 250rpx;
  top: 50%;
  left: 50%;
  margin-top: -150rpx;
  margin-left: -300rpx;
}

.userInfo .tt,.getIphone .tt {
  padding: 20rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  -ms-box-sizing: border-box;
  -o-box-sizing: border-box;
  font-size: 32rpx;
  text-align: center;
  color: #999;
  line-height: 60rpx;
}

.userInfo .op {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  height: 80rpx;
  border-top: 1rpx solid #f4f4f4;
}

.userInfo .op view {
  width: 50%;
  float: left;
  text-align: center;
  line-height: 80rpx;
  color: #353535;
}

.userInfo .op view button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  border-right: 1rpx solid #f4f4f4;
  color: #21b922;
}

.userInfo .op view button::after {
  border: none;
}

/* components/goodsItem/goodsItem.wxss */
.goods{
  width: 350rpx;
  height: 530rpx;
  margin: 0 0rpx;
  margin-top: 10rpx; 
  display: flex;
  flex-direction: column;
  background: #fff;
  position: relative;
  border-radius: 10rpx;
  box-shadow:0px 2rpx 6rpx 0px rgba(240,236,236,0.77);
}

.goods image{
  width: 295rpx;
  height: 295rpx;
  margin: 18rpx 27rpx 0 28rpx;
}
.goods image.hot{
  width: 34rpx;
  height: 40rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.goods .goodsname{
  width: 295rpx;
  display: inline-block;
  font-size: 24rpx;
  color: #303030;
  text-align: left;
  margin: 26rpx 20rpx 0 30rpx;
  font-weight: bold;
  height: 69rpx;
  line-height: 30rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods .goodsdis{
  width: 295rpx;
  display: inline-block;
  font-size: 22rpx;
  color: #888;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  text-align: left;
  margin: 22rpx 20rpx 0 30rpx;
  font-weight: 500;
  height:30rpx;
  line-height:24rpx;

}
.goods .goodsweight{
  font-size: 24rpx;
  color: #303030;
  font-weight: bold;
  margin: 0 20rpx 10rpx 30rpx;
}

.goods .goodsprice{
  font-size:36rpx;
  font-family:SourceHanSansCN-Bold;
  font-weight:bold;
  color:rgba(255,113,43,1);
  line-height:60rpx;

}
.goods .goodsprice text{
  font-size: 24rpx;
}
.goods .goodsdelprice{
  text-decoration: line-through;
  color: #aaa;
  font-size: 20rpx;
  display: none;
}
.goods view.listBottom{
  width: 295rpx;
  height:97rpx;
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:flex-end;
  padding-bottom: 30rpx;
  padding-top:18rpx;
  margin-left: 30rpx;
  position: relative;
}
.goods view image{
  float: right;
  margin-right: 10rpx;
  width:80rpx;
  height:80rpx;
  background:rgba(143,195,31,0);
}
.goods .wait{
  width:68rpx;
  height:68rpx;
  padding-bottom:10rpx;
}
.goods image.label{
  position: absolute;
  top: 0;
  left: 0;
  width: 51rpx;
  height: 65rpx;
}

.goods view.cartnum{
  width: 26rpx;
  height: 26rpx;
  background: #ff2f2f;
  border-radius: 20rpx;
  font-size: 18rpx;
  text-align: center;
  line-height: 26rpx;
  color: #fff;
  position: absolute;
  right: 15rpx;
  bottom: 90rpx;
}
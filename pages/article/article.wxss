/* pages/article/article.wxss */
.page {
  width: 100%;
  background-color: #F7F7F7;
  position: relative;
}
.article{
  background-color: #fff;
}
.article .head{
  padding: 28rpx 20rpx;
}
.article .head .title{
  font-size:48rpx;
  font-family:SourceHanSansCN-Medium;
  font-weight:bold;
  color:rgba(0,0,0,1);
  padding-bottom:30rpx;
}
.article .head .subtitle{
  font-size:30rpx;
  font-family:SourceHanSansCN-Medium;
  font-weight:bold;
  color:rgba(53,53,53,1);
}
.article .content{
  padding:20rpx 0; 
}
.article .content .graphics{
  width: 100%;
}
.article .content .graphics image{
  width: 100%;
  height: 500rpx;
  display: block;
  background-color: #f0f;
}
.img-explain{
  margin: 0;
  font-size:22rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(136,136,136,1);
  padding: 38rpx 20rpx;
  display:block;
}
.article .content .texture{
  font-size:30rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(53,53,53,1);
  line-height:48rpx;
  padding:12rpx 20rpx;
  text-align:left;  
}
.recommend{
  padding-bottom: 110rpx;
  padding-top: 35rpx;
}
.gray{
  color: rgba(136,136,136,1);
}
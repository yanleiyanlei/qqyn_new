.interval{
  width:100%;
  height:1rpx;
  background:rgba(238,238,238,1);
}
.search {
  position: fixed;
  top: 0;
  width: 100%;
  display:flex;
  flex-direction:row;
  justify-content:space-around;
  padding: 20rpx 0;
  background-color:#ffffff;
  border-bottom:1rpx solid #eee;
  z-index: 99;
}
.search .addloc{
  width: 138rpx;
  display:flex;
  align-items:center;
}
.search .addloc image{
  height: 32rpx;
  width: 27rpx;
  margin-right: 19rpx;
}
.search .addloc text{
  width: 92rpx;
  height: 60rpx;
  font-size:30rpx;
  font-family:SourceHanSansCN-Medium;
  font-weight:bold;
  color:rgba(130,130,130,1);
  overflow:hidden;
  line-height:60rpx;
}
.search .navsearch{
  width: 530rpx;
  height: 60rpx;
  background:rgba(239,239,239,1);
  border-radius:30rpx;
  font-size:28rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(51, 51, 51, 1);
  line-height: 60rpx;
  padding-left: 30rpx;
}
.content{
  width: 100%;
  height: 100%;
  background:rgba(239,239,239,1); 
  margin-top:100rpx;
}
.content .leftBar{
  position: fixed;
  width: 170rpx;
  /* height: 1100rpx; */
  background:rgba(239,239,239,1); 
  top: 100rpx;
  bottom: 0rpx;
  overflow-x: hidden;
  overflow-y: scroll;
}
.content .leftBar::-webkit-scrollbar {
        display: none;
    }
.leftBar .cell-group{
  display: flex;
  flex-direction: column;
  align-items: center;
  
}
.leftBar .cell-group .cell{
  height:100rpx;
  font-size:26rpx;
  color:rgba(136, 136, 136, 1);
  line-height:100rpx;
  width:100%;
  text-align:center;
  position:relative;

}
.leftBar .cell-group .cell-bar{
  width:6rpx;
  height:40rpx;
  background:rgba(143, 195, 31, 1);
  border-radius:3rpx;
  display:inline-block;
  margin-right:8rpx;
  position:absolute;
  left:1rpx;
  top:30rpx;
}
.leftBar .cell-group .active{
  color:rgba(143, 195, 31, 1);
  background:rgba(256,256,256,1); 
}
.leftBar .cell-group .unique-hot{
  color:rgba(225, 55, 59, 1);
  background:linear-gradient(90deg,rgba(255,208,177,1) 0%,rgba(255,255,255,1) 100%);
}
.leftBar .cell-group .unique-fresh{
  color:rgba(225, 55, 59, 1);
  background:linear-gradient(90deg,rgba(198,255,180,1) 0%,rgba(255,255,255,1) 100%);
}
.rightBar{
  width: 550rpx;
  margin-left:170rpx;
  /* margin-top:100rpx; */
}
.rightBar .goods{
  height: 260rpx;
  width: 580rpx;
  background: #fff; 
  display: flex;
  justify-content: center;
  align-content: center;
}
.rightBar .goods .img{
  margin-left:10rpx;
}
.rightBar .goods .img image{
  height: 240rpx;
  width: 240rpx;
}
.rightBar .goods .content{
  width: 280rpx;
  height: 240rpx;
  padding: 10rpx;
  position: relative;
  margin: 10rpx;
  background:#fff;
}
.rightBar .goods .content .title{
  width:280rpx;
  font-size:24rpx;
  line-height: 30rpx;
  height: 60rpx;
  font-family:SourceHanSansCN-Bold;
  font-weight:bold;
  color:rgba(51,51,51,1);
  display: inline-block;
  text-align: left;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.content .sub-title{
  height:30rpx;
  font-size:22rpx;
  font-family:SourceHanSansCN-Medium;
  font-weight:500;
  color:rgba(136,136,136,1);
  display: inline-block;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  text-align: left;
  line-height:30rpx;
  margin-top:16rpx;

}
.goods .goodsprice{
  font-size:36rpx;
  font-family:SourceHanSansCN-Bold;
  font-weight:bold;
  color:rgba(255,113,43,1);
  /* line-height:60rpx; */

}
.goods .goodsprice text{
  font-size: 24rpx;
}
.goods .goodsdelprice{
  text-decoration: line-through;
  color: #aaa;
  font-size: 20rpx;
  display: block;
}
.goods view.listBottom{
  width: 280rpx;
  height:92rpx;
  padding-top:20rpx;
  position: relative;
  border-bottom:1rpx solid rgba(238,238,238,1);
}
.goods .wait{
  width:60rpx;
  height:60rpx;
  padding-bottom:10rpx;
  position: absolute;
  right: 0;
  bottom: 12rpx;
}
.goods .cart{
  width:60rpx;
  height:60rpx;
  padding-bottom:10rpx;
  position: absolute;
  right: 0;
  bottom: 12rpx;
}

.goods view.cartnum{
  width: 26rpx;
  height: 26rpx;
  background: #ff2f2f;
  border-radius: 20rpx;
  font-size: 18rpx;
  text-align: center;
  line-height: 26rpx;
  color: #fff;
  position: absolute;
  right: 0rpx;
  bottom: 64rpx;
  z-index: 2;
}
.unique-icon-hot{
  width:14rpx;
  height: 18rpx; 
  position:absolute;
  left:6rpx;
  top:40rpx;
}
.unique-icon-fresh{
  width:14rpx;
  height: 18rpx; 
  position:absolute;
  left:6rpx;
  top:40rpx;
}
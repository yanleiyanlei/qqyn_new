/* pages/checkAdd/checkAdd.wxss */

page {
  width: 100%;
  background: #eee;
}

.cehckadd {

  
  width: 100%;
  background: #fff;
  margin-top: 10rpx;
}

.location {
  
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 2rpx solid #eee;
  box-sizing: border-box;
  padding: 0 32rpx;
}

.location image {
  display: block;
  width: 28rpx;
  height: 32rpx;
  margin-right: 14rpx;
}

.location text {
  font-size: 28rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(48, 48, 48, 1);
}

.addcity {
  width: 100%;
  height: 100rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding: 0 32rpx;
  position: relative;
}

.addcity-left {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.addcity-left picker {
  flex: 1;
}

.addcity-left view {
  font-size: 28rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(48, 48, 48, 1);
}

.addcity-left picker view {
  box-sizing: border-box;
  padding-left: 24rpx;
}

.addcity-right {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 100;
}

.addcity-right image {
  width: 14rpx;
  height: 25rpx;
}

.cnbottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background: rgba(255, 112, 44, 1);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.cnbottom text {
  font-size: 32rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

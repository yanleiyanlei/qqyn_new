/*筛选  */

.screen{
  display: flex;
  justify-content: space-around;
  font-size: 28rpx;
  height: 60rpx;
  /* margin-top: 20rpx; */
background:#fff;

}
.screen view{
  position: relative;
  width: 180rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  border-right: 1px solid #ccc;
}
.sxactive{
  color: #FF712B;
}
.sxactive text{
  color: #000;
}
.main{
  position: relative;
  padding-bottom: 30rpx;
}
.mark{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%; 
  height: 100%; 
  background: rgba(0, 0, 0, 0.3);
  z-index: 9999;
  display: none;
  padding-bottom: 55rpx;
}

.show{
  display: block;
}
.hide{
  display: none;
}
.mark .select{
  /* width: 100%; */
}

.mark .select-cont{
  /* width: 100%; */
  height: auto;
  background: #fff;
  display: flex;
}
.mark .select-cont .sactive{
  color: #FF712B;
  border: 1rpx solid #FF712B;
}
.mark .select-cont .hactive{
  color: #FF712B;
  border: 1rpx solid #FF712B;
}
.mark .select-footer{
  height: 90rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #bfbfbf;
  align-items: center;
  border-radius: 0 0 10rpx 10rpx;
  padding: 0 20rpx;

}
.mark .select-footer view{
  border: none;
  font-size: 32rpx;
  color: #828282;

}
.mark .select-cont view{
  padding: 10rpx 20rpx;
  text-align: center;
  border: 1rpx solid #bfbfbf;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin: 30rpx 20rpx;
}
.screen view:last-child{
  border: none;
}
.screen .active{
  color: #FF712B;
}
.screen .icon-sanjiao-bottom{
  position: absolute;
  top: -10rpx;
  right: 20rpx;
}
.screen .icon-icon-test{
  position: absolute;
  bottom: -10rpx;
  right: 20rpx;
}
.screen .xlactive1 .icon-sanjiao-bottom{
  color: #FF712B;
}

.screen .xlactive2 .icon-icon-test{
  color: #FF712B;
}
.screen .jgactive1 .icon-sanjiao-bottom{
  color: #FF712B;
}

.screen .jgactive2 .icon-icon-test{
  color: #FF712B;
}
/*搜索===========  */

.search {
  z-index: 9999;
  display: flex;
  direction: center;
  font-size: 24rpx;
  color: #fff;
  padding: 20rpx 32rpx;
  background: #fff;
  margin-top: 5rpx;
}

.search .searchLoc {
  width: 115rpx;
  line-height: 60rpx;
  margin-right: 0rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color:black;

}

.search .searchCont {
  width:518rpx;
  height:60rpx;
  background:#EFEFEF;
  border-radius:20rpx;
  text-align:center;
  line-height:60rpx;
  margin-left:25rpx;
}
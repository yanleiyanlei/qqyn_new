@import "../../lib/style/public.wxss";

page {
  background: #fff;
  padding-bottom: 40rpx;
}

.hd-banner {
  width: 750rpx;
  height: 750rpx;
}

.hd-banner image {
  width: 100%;
  height: 100%;
}

.hd-rule {
  width: 100%;
  margin-top: 10rpx;
}

.hd-rule .rule-tit {
  font-size: 24rpx;
  color: #434343;
  padding-left: 70rpx;
  line-height: 54rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

.hd-rule .rule {
  padding: 0 44rpx;

  font-size: 22rpx;
  color: #a8a8a8;
  line-height: 40rpx;
}

.hd-rule .rule  .left {
  float: left;
  width: 30rpx;
}

.hd-rule .rule  .right {

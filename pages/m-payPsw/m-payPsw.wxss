/* pages/m-payPsw/m-payPsw.wxss */
@import "../../lib/style/iconfont.wxss";
@import "../../lib/style/public.wxss";

page {
  background: #fff;
}

.content, .contentBox {
  padding: 0rem 32rpx;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  margin-top: 20rpx;
}

.content .list {
  width: 100%;
  height: 130rpx;
  background: #fff;
  box-sizing: border-box;
  position: relative;
}

.content .list .one {
  display: inline-block;
  font-size: 32rpx;
  color: #333;
  line-height: 130rpx;
  margin-left: 20rpx;
  vertical-align: middle;
  margin-top: 0;
  float: left;
}

.content .list .in {
  float: left;
  font-size: 28rpx;
  border: none;
  height: 130rpx;
  margin-left: 20rpx;
  width: 400rpx;
  vertical-align: middle;
}

.content .list .iconfont {
  color: #333;
  font-size: 40rpx;
  line-height: 80rpx;
  position: absolute;
  right: 20rpx;
  display: none;
}

.content .list .yzm {
  display: inline-block;
  font-size: 26rpx;
  text-align: center;
  width: 170rpx;
  position: absolute;
  right: 0;
  line-height: 66rpx;
  background: #ff712b;
  color: #fff;
  border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  -webkit-border-radius: 10rpx;
  margin-top: 30rpx;
}

.tj {
  width:90%;
  height: 100rpx;
  font-size: 32rpx;
  background: #ff712b;
  color: #fff;
  line-height: 100rpx;
  margin-top: 150rpx;
}

/* pages/laAdd/laAdd.wxss */

page {
  width: 100%;
  background: #eee;
}

.laAdd {


  
  width: 100%;
}


.newAdd {
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  left: 0;
  background: rgba(255, 112, 44, 1);
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}

.newAdd image {
  margin-left: 26rpx;
  width: 14rpx;
  height: 26rpx;
}

.newAdd text {
  font-size: 32rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.laAdd-li {
  width: 100%;
   overflow: hidden;
  box-sizing: border-box;
  padding: 36rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #ffffff;
  margin-top: 10rpx;
}
.laAdd-txt view {
  width: 100%;
}

.laAdd-txt .laAdd-li-top {
  display: flex;
  box-sizing: border-box;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 30rpx;
  align-items: center;
  padding-right: 150rpx;
}

.laAdd-txt .laAdd-li-top text:first-child {
  font-size: 32rpx;
  font-family: SourceHanSansCN-Bold;
  font-weight: bold;
  color: rgba(48, 48, 48, 1);
}

.laAdd-txt .laAdd-li-top text:last-child {
  font-size: 30rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(48, 48, 48, 1);
}

.laAdd-li-botm {
  width: 100%;
  font-size: 28rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(48, 48, 48, 1);
}
.laAdd-image{
  width: 36rpx;
  height: 100%;
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}
.laAdd-image image{
  width: 36rpx;
  height: 36rpx;
}
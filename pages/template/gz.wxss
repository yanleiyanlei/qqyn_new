.gzs{
    width: 100%;
    height: 100%;
    position: fixed;
    background:rgba(0,0,0,0.3);
    z-index: 99999;
}
.cont{
    width: 460rpx;
    height: 748rpx;
    font-size: 12px;
    background: #FFFFFF;
    position: fixed;
    z-index: 9999999;
    top: 208rpx;
    left: 50%;
    margin-left: -280rpx;
    border-radius: 20rpx;
    -webkit-border-radius: 20rpx;
    padding: 0 50rpx;
    padding-top: 80rpx;
}
.cont-left{
    float: left;
}
.cont-left image{
    width: 158rpx;
    height: 158rpx;
}
.cont-right{
    float: right;
    width: 260rpx;
}
.cont-right .r1{
    font-size: 34rpx;
    color: #9cc802;
    height: 46rpx;
    line-height: 46rpx;
}

.cont-right .r2{
    font-size: 26rpx;
    color: #909090;
    line-height: 43rpx;
    margin-top: 20rpx;
}
.cont-wm{
    text-align: center;
}

.cont-wm image{
    width: 374rpx;
    height: 374rpx;
    margin-top: 80rpx;
    margin-bottom: 40rpx; 
}

.gzs.hide{
  display: none;
}
.gzs.show{
  display: block
}